@using EntityLayer.Concrete
@model Writer

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}

<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

<script src="~/lib/jquery/dist/jquery.js"></script>

<section class="main-content-w3layouts-agileits">
    <div class="container">
        <h3 class="tittle">Writer Register Page</h3>
        <div class="inner-sec">
            <div class="login p-5 bg-light mx-auto mw-100">
                <form method="post">
                    <div class="form-row">
                        <div class="col-md-6 mb-3">
                            <label for="validationCustom01">First and Last name</label>

                            <input type="text" class="form-control" id="validationDefault01" name="WriterName" placeholder="" required="">
                            @Html.ValidationMessageFor(x => x.WriterName, "", new { @class = "color:red" })
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="validationCustom02">Email Address</label>
                            <input type="email" class="form-control" id="validationDefault02" name="WriterMail" placeholder="" required="">
                            @Html.ValidationMessageFor(x => x.WriterMail, "", new { @class = "color:red;" })
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="exampleInputPassword1 mb-2">Password</label>
                            <input type="password" class="form-control" name="WriterPassword" id="password1" placeholder="" required="">
                            @Html.ValidationMessageFor(x => x.WriterPassword, "", new { @class = "color:red;" })
                        </div>
                        <div class="form-group col-md-6">
                            <label for="exampleInputPassword2 mb-2">Image File Path</label>
                            <input type="text" class="form-control" name="WriterImage" id="Image" placeholder="" required="">
                        </div>

                        <select asp-items="ViewBag.item" class="form-control"></select>

                    </div>
                    <button type="submit" class="btn btn-primary submit mb-4" style="margin-top:15px">Register</button>
                    <p>
                        <a href="#" id="btn1">By clicking Signup, I agree to your terms</a>
                    </p>
                </form>

            </div>
        </div>
    </div>
    <script>
        $('#btn1').click(function () {
            swal("Continuing to send information and mails via the recipient e-mail address on our site without reaching the spam criterion. If you remove them from e-mail newsletters, you can stop the mail thread, your password and e-mail address are encrypted and stored in our databases as you see them as any user.....");
        })
    </script>
</section>